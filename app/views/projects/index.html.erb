<div class="card">
  <div class="card-header">
    <h1 class="card-title d-flex justify-content-between">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-sm btn-primary'%>
    </h1>

    <% @projects.each do |p| %>
      <%= link_to p do %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= p.name %></h5>
        <p><%=p.description %></p>
      </div>
    </div>
        <% end %>
    <% end %>
  </div>
  <% if @projects.count > 0 %>
    <div class="card-body">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.user_id %></td>
          <td><%= link_to 'Show', project, class: 'btn btn-secondary btn-sm'%></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-success btn-sm' %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% elsif @projects.count == 0 %>
    <div>You have no Projects. Create one!!</div>
    </div>
  <%end %>
</div>

